<div class="bar"></div>
<div class="inside-content">
    <div class="form-wrapper">
        <div class="row">
            <div class="col-12 col-md-8">
                <label for="name" class="control-label"><h4 class="header-title">Name</h4></label>
                <input value="{{ variables.name is defined ? variables.name }}" class="form-control" id="name" name="name" placeholder="Disco Dragon" type="text" required="required" />
                <p class="description form-control-description">Monster name</p>
            </div>
            <div class="col-12 col-md-4">
                <label for="challenge_rating" class="control-label"><h4 class="header-title">Challenge Rating</h4></label>
                <input value="{{ variables.challenge_rating is defined ? variables.challenge_rating }}" class="form-control mention" id="challenge_rating" name="challenge_rating" placeholder="1/2" type="text" />
                <p class="description form-control-description">Challenge Rating</p>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <label for="types" class="control-label"><h4 class="header-title">Types / Traits</h4></label>
                <input value="{{ variables.types is defined ? variables.types }}" class="form-control mention" id="types" name="types" placeholder="Celestial, Dragon" type="text" />
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-md-6">
                <label for="size" class="control-label"><h4 class="header-title">Size</h4></label>
                <select class="form-control" id="size" name="size">
                    <option value="Tiny" {% if variables.size is defined and variables.size == "Tiny" %}selected="selected" {% endif %} >Tiny</option>
                    <option value="Small" {% if variables.size is defined and variables.size == "Small" %}selected="selected" {% endif %} >Small</option>
                    <option value="Medium" {% if variables.size is defined and variables.size == "Medium" %}selected="selected" {% endif %} >Medium</option>
                    <option value="Large" {% if variables.size is defined and variables.size == "Large" %}selected="selected" {% endif %} >Large</option>
                    <option value="Huge" {% if variables.size is defined and variables.size == "Huge" %}selected="selected" {% endif %} >Huge</option>
                    <option value="Gargantuan" {% if variables.size is defined and variables.size == "Gargantuan" %}selected="selected" {% endif %} >Gargantuan</option>
                </select>
            </div>
            <div class="col-12 col-md-6">
                <label for="sizer" class="control-label"><h4 class="header-title">Size Upper Range</h4></label>
                <select class="form-control" id="sizer" name="sizer">
                    <option value="NONE" {% if variables.sizer is defined and variables.sizer == "NONE" %}selected="selected" {% endif %} >NONE</option>
                    <option value="Tiny" {% if variables.sizer is defined and variables.sizer == "Tiny" %}selected="selected" {% endif %} >Tiny</option>
                    <option value="Small" {% if variables.sizer is defined and variables.sizer == "Small" %}selected="selected" {% endif %} >Small</option>
                    <option value="Medium" {% if variables.sizer is defined and variables.sizer == "Medium" %}selected="selected" {% endif %} >Medium</option>
                    <option value="Large" {% if variables.sizer is defined and variables.sizer == "Large" %}selected="selected" {% endif %} >Large</option>
                    <option value="Huge" {% if variables.sizer is defined and variables.sizer == "Huge" %}selected="selected" {% endif %} >Huge</option>
                    <option value="Gargantuan" {% if variables.sizer is defined and variables.sizer == "Gargantuan" %}selected="selected" {% endif %} >Gargantuan</option>
                </select>
                <p class="description form-control-description">leave at NONE if there is only one size of this creature</p>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <label for="description" class="control-label"><h4 class="header-title">Description</h4></label>
                <textarea class="form-control mention" id="description" name="description" rows="3" placeholder="">{{ variables.description is defined ? variables.description }}</textarea>
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-md-6">
                <label for="armor_class" class="control-label"><h4 class="header-title">Armor Class</h4></label>
                <input value="{{ variables.armor_class is defined ? variables.armor_class }}" class="form-control" id="armor_class" name="armor_class" placeholder="12" type="text" />
            </div>
            <div class="col-12 col-md-6">
                <label for="hit_points" class="control-label"><h4 class="header-title">Hit Points</h4></label>
                <input value="{{ variables.hit_points is defined ? variables.hit_points }}" class="form-control" id="hit_points" name="hit_points" placeholder="Use [roll:2d8+4] to add the dice roller" type="text" />
                <p class="description form-control-description">14hp (2d8+4) [roll:2d8+4]</p>
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-md-6">
                <label for="speed" class="control-label"><h4 class="header-title">Speed</h4></label>
                <input value="{{ variables.speed|default }}" class="form-control" id="speed" name="speed" placeholder="30 ft, 60 ft (run)" type="text" />
            </div>
            <div class="col-12 col-md-6">
                <label for="stealth" class="control-label"><h4 class="header-title">Stealth</h4></label>
                <input value="{{ variables.stealth|default }}" class="form-control" id="stealth" name="stealth" placeholder="16" type="text" />
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-md-6">
                <label for="senses" class="control-label"><h4 class="header-title">Senses</h4></label>
                <input value="{{ variables.senses|default }}" class="form-control" id="senses" name="senses" placeholder="Darkvision, Truesight, Passive perception etc" type="text" />
            </div>
            <div class="col-12 col-md-6">
                <label for="perception" class="control-label"><h4 class="header-title">Perception</h4></label>
                <input value="{{ variables.perception|default }}" class="form-control" id="perception" name="perception" placeholder="10" type="text" />
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-md-6">
                <label for="languages" class="control-label"><h4 class="header-title">Languages</h4></label>
                <input value="{{ variables.languages is defined ? variables.languages }}" class="form-control" id="languages" name="languages" placeholder="Common, Dwarvish, Draconic" type="text" />
            </div>
            <div class="col-12 col-md-6">
                <label for="pb" class="control-label"><h4 class="header-title" title="Proficiency Bonus">PB</h4></label>
                <input value="{{ variables.pb|default }}" class="form-control" id="pb" name="pb" placeholder="+2" type="text" />
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-md-4">
                <label for="strength" class="control-label"><h4 class="header-title">Strength</h4></label>
                <input value="{{ variables.strength is defined ? variables.strength }}" class="form-control" id="strength" name="strength" type="number" placeholder="+1" />
            </div>
            <div class="col-12 col-md-4">
                <label for="dexterity" class="control-label"><h4 class="header-title">Dexterity</h4></label>
                <input value="{{ variables.dexterity is defined ? variables.dexterity }}" class="form-control" id="dexterity" name="dexterity" type="number" placeholder="+1" />
            </div>
            <div class="col-12 col-md-4">
                <label for="constitution" class="control-label"><h4 class="header-title">Constitution</h4></label>
                <input value="{{ variables.constitution is defined ? variables.constitution }}" class="form-control" id="constitution" name="constitution" type="number" placeholder="+1" />
            </div>
            <div class="col-12 col-md-4">
                <label for="intelligence" class="control-label"><h4 class="header-title">Intelligence</h4></label>
                <input value="{{ variables.intelligence is defined ? variables.intelligence }}" class="form-control" id="intelligence" name="intelligence" type="number" placeholder="+1" />
            </div>
            <div class="col-12 col-md-4">
                <label for="wisdom" class="control-label"><h4 class="header-title">Wisdom</h4></label>
                <input value="{{ variables.wisdom is defined ? variables.wisdom }}" class="form-control" id="wisdom" name="wisdom" type="number" placeholder="+1" />
            </div>
            <div class="col-12 col-md-4">
                <label for="charisma" class="control-label"><h4 class="header-title">Charisma</h4></label>
                <input value="{{ variables.charisma is defined ? variables.charisma }}" class="form-control" id="charisma" name="charisma" type="number" placeholder="+1" />
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-md-12">
                <label for="saving_throws" class="control-label"><h4 class="header-title">Saving Throws</h4></label>
                <input value="{{ variables.saving_throws is defined ? variables.saving_throws }}" class="form-control" id="saving_throws" name="saving_throws" type="text" />
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-md-6">
                <label for="damage_vulnerabilities" class="control-label"><h4 class="header-title">Damage Vulnerabilities</h4></label>
                <input value="{{ variables.damage_vulnerabilities is defined ? variables.damage_vulnerabilities }}" class="form-control" id="damage_vulnerabilities" name="damage_vulnerabilities" type="text" />
            </div>
            <div class="col-12 col-md-6">
                <label for="damage_resistances" class="control-label"><h4 class="header-title">Damage Resistances</h4></label>
                <input value="{{ variables.damage_resistances is defined ? variables.damage_resistances }}" class="form-control" id="damage_resistances" name="damage_resistances" type="text" />
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-md-6">
                <label for="damage_immunities" class="control-label"><h4 class="header-title">Damage Immunities</h4></label>
                <input value="{{ variables.damage_immunities is defined ? variables.damage_immunities }}" class="form-control" id="damage_immunities" name="damage_immunities" type="text" />
            </div>
            <div class="col-12 col-md-6">
                <label for="condition_immunities" class="control-label"><h4 class="header-title">Condition Immunities</h4></label>
                <input value="{{ variables.condition_immunities is defined ? variables.condition_immunities }}" class="form-control" id="condition_immunities" name="condition_immunities" type="text" />
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <label for="special_abilities" class="control-label"><h4 class="header-title">Special Abilities</h4></label>
                <textarea class="form-control mention" id="special_abilities" name="special_abilities" rows="6" placeholder="">{{ variables.special_abilities is defined ? variables.special_abilities }}</textarea>
                <p class="description form-control-description">use [b] .. [/b] to bolden the name. Use [roll:1d10+2] (your dice roll) in order for the dice roller to be activated on the statblock   </p>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <label for="actions" class="control-label"><h4 class="header-title">Actions</h4></label>
                <textarea class="form-control mention" id="actions" name="actions" rows="10" placeholder="[b]Unarmed Strike[/b]. Melee Weapon Attack: +4 to hit, reach 5ft. one target. Hit: 6 (1d8+2) [roll:1d8+2] bludgeoning damage.">{{ variables.actions is defined ? variables.actions }}</textarea>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <label for="reactions" class="control-label"><h4 class="header-title">Reactions</h4></label>
                <textarea class="form-control mention" id="reactions" name="reactions" rows="5" placeholder="[b]Horned Parry[/b]. Once per combat the Horned Pidgeon can parry an attack using it's horns ">{{ variables.reactions is defined ? variables.reactions }}</textarea>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <label for="legendary_actions" class="control-label"><h4 class="header-title">Legendary Actions</h4></label>
                <textarea class="form-control mention" id="legendary_actions" name="legendary_actions" rows="10" placeholder="">{{ variables.legendary_actions is defined ? variables.legendary_actions }}</textarea>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <label for="lair_actions" class="control-label"><h4 class="header-title">Lair Actions</h4></label>
                <textarea class="form-control mention" id="lair_actions" name="lair_actions" rows="10" placeholder="">{{ variables.lair_actions is defined ? variables.lair_actions }}</textarea>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <label for="spellcasting" class="control-label"><h4 class="header-title">Spellcasting</h4></label>
                <textarea class="form-control mention" id="spellcasting" name="spellcasting" rows="5" placeholder="">{{ variables.spellcasting is defined ? variables.spellcasting }}</textarea>
                <p class="description form-control-description">Spellcasting ability, Score, Attack bonus etc</p>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <label for="lair_description" class="control-label"><h4 class="header-title">Lair Description</h4></label>
                <textarea class="form-control mention" id="lair_description" name="lair_description" rows="5" placeholder="">{{ variables.lair_description is defined ? variables.lair_description }}</textarea>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <label for="regional_effects" class="control-label"><h4 class="header-title">Regional Effects</h4></label>
                <textarea class="form-control mention" id="regional_effects" name="regional_effects" rows="5" placeholder="">{{ variables.regional_effects is defined ? variables.regional_effects }}</textarea>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <label for="image_gallery_id" class="control-label"><h4 class="header-title">Image Gallery ID</h4></label>
                <input value="{{ variables.image_gallery_id is defined ? variables.image_gallery_id }}" class="form-control" id="image_gallery_id" name="image_gallery_id" placeholder="123" type="number" />
                <p class="description form-control-description">paste here the ID of the image you want to be used as the image of the item</p>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <label for="source" class="col-sm-2 control-label"><h4 class="header-title">source</h4></label>
                <input  value="{{ variables.source|default }}" class="form-control" id="source" name="source" placeholder="SRD" type="text" />
                <p class="description form-control-description">Where can this be found (SRD, Homebrew, etc.)</p>
	        </div>
        </div>
    </div>
</div>
