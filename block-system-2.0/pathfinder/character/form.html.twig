{% macro printFormRow(type, variables, placeholder = '', label ='',description ='', inputType = 'text', rows = 3 ) %}
{% if type == '*' %}<div class="form-group va">{{label}}</div>{% else %}
    {% set relabel = '' %}{% set req = '' %}{% set rm = '' %}{% set rc = '' %}{% if type|first == '!' %}{% set reqlabel = 'This field has to be filled out before saving.' %}{% set req = 'required=required' %}{% set rm = '*' %}{% set rc = 'req' %}{% set type = type|trim('!', 'left') %}{% endif %} 
    {% if label %} {% else %}{% set label = type|capitalize %} {% endif %}
    <div class="form-group">
        <label for="{{type}}">{{ label }}{{rm}}</label>
        {% if inputType == 'textarea' %}
            <textarea title="{{reqlabel}}" rows="{{ rows }}" placeholder="eg {{ placeholder }}" class="form-control {{rc}}" {{ req }} name="{{ type }}" />{{ 
                attribute( variables, type ) is defined ? attribute( variables, type) }}</textarea>
        {% else %}
            {% if rows == 3 %}{% set sty = '' %}{% else %}{% set sty = rows %}{% endif %}
            {% if placeholder != '' and placeholder != 'default' %}{% set placeholder = 'eg ' ~ placeholder %}{% endif %}
            <input title="{{reqlabel}}" placeholder="{{ placeholder }}" class="form-control {{rc}} {{sty}} c" type="{{ inputType }}" value="{{ 
                attribute( variables, type ) is defined ? attribute( variables, type) }}" {{ req }} name="{{ type }}"  />
        {% endif %}
        {% if (description) %}
            <p class="description form-control-description">{{ description|raw }}</p>
        {% endif %}
    </div>
{% endif %}{% endmacro %}
{# ---------------------------------------------------------------- #}
{% macro printSkillRow( name, label, variables, special = '' ) %}
    {% import _self as macros %}
    <tr>
        <td class="c" width="20px">
            {% set ch = ''%}
            {% if attribute( variables, name ~ '_cs' ) is defined and attribute( variables, name ~ '_cs' ) == 1 %}{% set ch = 'checked=checked' %}{% endif %}
            <input class="form-control" type="checkbox" value="1" {{ch}} name="{{ name ~ '_cs' }}" />
        </td>
        <td>
            {{ label }}{% if special == '!' %}:
            <input class="form-control wds c" type="text" value="{{ attribute( variables, name ~ '_name' ) is defined ? attribute( variables, name ~ '_name' ) }}" name="{{ name ~ '_name' }}" />
            {% endif %}
        </td>
        <td>
            <input placeholder="default" class="form-control md c" type="text" value="{{ attribute( variables, name ~ '_att_modifier' ) is defined ? attribute( variables, name ~ '_att_modifier' ) }}" name="{{ name ~ '_att_modifier' }}" />
        </td>
        <td>
            <input placeholder="eg 1" class="form-control md c" type="text" value="{{ attribute( variables, name ~ '_rank' ) is defined ? attribute( variables, name ~ '_rank' ) }}" name="{{ name ~ '_rank' }}" />
        </td>
        <td>
            <input placeholder="eg 1" class="form-control md c" type="text" value="{{ attribute( variables, name ~ '_modifier' ) is defined ? attribute( variables, name ~ '_modifier' ) }}" name="{{ name ~ '_modifier' }}" />
        </td>
    </tr>
{% endmacro %}
{# ---------------------------------------------------------------- #}
{% macro printSkillRowAdvanced(type, variables, placeholder = '', label ='',description ='' ) %}
    {% if label %} {% else %}{% set label = type %} {% endif %}
    <tr>
        <td>
            {{ label }}
        </td>
        <td colspan="3">
            {% if (description) %}
                <p class="description form-control-description">{{ description|raw }}</p>
            {% endif %}
            <textarea rows="5" placeholder="eg {{ placeholder }}" class="form-control"   name="{{ type }}"  />{{ attribute( variables, type ) is defined ? attribute( variables, type) }}</textarea>
        </td>
    </tr>
{% endmacro %}
