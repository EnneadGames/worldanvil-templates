{% macro genFocus(id, name, score) %}{% if name is defined and name != '' %}
<tr>
    <td class="attribute-value">{{score}}</td>
    <td class="attribute-name">{{name}}</td>
</tr>{% endif %}{% endmacro genFocus %}
<div class="container-fluid dishonored-sheet">
    <div class="row">
        <div class="col-12 col-md-12 col-lg-8">
            <div class="card">
                <div class="card-body">
                    <div class="card-title"><img src="https://www.worldanvil.com/uploads/images/ae6640bdbfcf0d55f8030a614bfbb628.png" width=400></div>
                    <ul class="list-group">
                        <li class="list-group-item"><span class="desc">Name:&nbsp;</span>{% if variables.name is defined %}<span class="value">{{variables.name}}</span>{% endif %}</li>
                        <li class="list-group-item"><span class="desc">Archetype:&nbsp;</span>{% if variables.archetype is defined %}<span class="value">{{variables.archetype}}</span>{% endif %}</li>
                        <li class="list-group-item"><span class="desc">First Truth:&nbsp;</span>{% if variables.first_truth is defined %}<span class="value">{{variables.first_truth}}</span>{% endif %}</li>
                        <li class="list-group-item"><span class="desc">Second Truth:&nbsp;</span>{% if variables.second_truth is defined %}<span class="value">{{variables.second_truth}}</span>{% endif %}</li>
                        <li class="list-group-item"><span class="desc">Description:&nbsp;</span>{% if variables.description is defined %}<span class="value">{{variables.description|nl2br}}</span>{% endif %}</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-lg-4 hidden-md hidden-xs hidden-sm d-none d-lg-block logo-frame">
            <div class="row logo" title="Dishonored Logo"></div>
        </div>
    </div>
    <div class="row">
        <div class="col-12 col-md-12 col-lg-5">
            <div class="card">
                <div class="card-body">
                    <h4 class="text-center card-title">Skills</h4>
                    <p class="card-text">
                        <div class="table-responsive">
                            <table class="table-borderless">
                                <tbody>
                                    <tr>
                                        <td class="attribute-value">{% if variables.fight is defined %}{{variables.fight}}{% endif %}</td>
                                        <td class="attribute-name"title="Fight covers your ability to use, and defend against, violence. It’s most often used when making attacks, but it can also be used to judge threatening situations, and it covers a knowledge of weapons, combat styles, and strategy.">Fight</td>
                                    </tr>
                                    <tr>
                                        <td class="attribute-value">{% if variables.move is defined %}{{variables.move}}{% endif %}</td>
                                        <td class="attribute-name" title="Move covers your ability to navigate your environment. It is most often used to travel over difficult terrain or move in dangerous situations.">Move</td>
                                    </tr>
                                    <tr>
                                        <td class="attribute-value">{% if variables.study is defined %}{{variables.study}}{% endif %}</td>
                                        <td class="attribute-name" title="Study covers your education and knowledge, but also your ability to do research, and your general perceptiveness. It’s useful when trying to gain or study information, or when discerning facts about a person, place, or object.">Study</td>
                                    </tr>
                                    <tr>
                                        <td class="attribute-value">{% if variables.survive is defined %}{{variables.survive}}{% endif %}</td>
                                        <td class="attribute-name" title="Survive covers your resistance to danger and pressure, and your ability to handle and navigate the perils of the world.">Survive</td>
                                    </tr>
                                    <tr>
                                        <td class="attribute-value">{% if variables.talk is defined %}{{variables.talk}}{% endif %}</td>
                                        <td class="attribute-name" title="Talk covers your ability to relate to and interact with other people. This skill covers both talking to people, but also an understanding of how people communicate.">Talk</td>
                                    </tr>
                                    <tr>
                                        <td class="attribute-value">{% if variables.tinker is defined %}{{variables.tinker}}{% endif %}</td>
                                        <td class="attribute-name" title="Tinker covers your ability to use and understand complex or specialized tools and techniques, such as vehicles and machinery.">Tinker</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </p>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-12 col-lg-2">
            <div class="card">
                <div class="card-body">
                    <h5 class="text-center card-title">Stress</h5>
                    <p class="text-center card-text"><span class="value">{% if variables.stress is defined %}{{variables.stress}}{% endif %}{% if variables.stress_max is defined %} of {{variables.stress_max}}{% endif %}</span></p>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <h5 class="text-center card-title">Void Points</h5>
                    {% set vp = 0 %}{% if variables.void_points is defined %}{% set vp = variables.void_points %}{% endif %}
                    {% set vpm = 3 %}{% if variables.void_point_max is defined %}{% set vpm = variables.void_point_max %}{% endif %}
                    <p class="text-center card-text"><span class="value">{{vp}} of {{vpm}}</span></p>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <h5 class="text-center card-title">Momentum</h5>
                    <p class="text-center card-text"><span class="value">{% if variables.momentum is defined %}{{variables.momentum}}{% endif %}</span></p>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <h5 class="text-center card-title">XP</h5>
                    {% set xp = 0 %}{% if variables.xp is defined %}{% set xp = variables.xp %}{% endif %}
                    <p class="text-center card-text"><span class="value">{{xp}}</span></p>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-12 col-lg-5">
            <div class="card">
                <div class="card-body">
                    <h4 class="text-center card-title">Styles</h4>
                    <p class="card-text">
                        <div class="table-responsive">
                            <table class="table-borderless">
                                <tbody>
                                    <tr>
                                        <td class="attribute-value">{% if variables.boldly is defined %}{{variables.boldly}}{% endif %}</td>
                                        <td class="attribute-name" title="If you do something Boldly, you’re drawing attention to yourself, utilizing all the flair and personality you can muster.">Boldly</td>
                                    </tr>
                                    <tr>
                                        <td class="attribute-value">{% if variables.carefully is defined %}{{variables.carefully}}{% endif %}</td>
                                        <td class="attribute-name" title="If you do something Carefully, you’re paying close attention to detail and take extra time to avoid mistakes.">Carefully</td>
                                    </tr>
                                    <tr>
                                        <td class="attribute-value">{% if variables.cleverly is defined %}{{variables.cleverly}}{% endif %}</td>
                                        <td class="attribute-name" title="If you do something Cleverly, you approach problems from multiple angles and plan several steps ahead.">Cleverly</td>
                                    </tr>
                                    <tr>
                                        <td class="attribute-value">{% if variables.forcefully is defined %}{{variables.forcefully}}{% endif %}</td>
                                        <td class="attribute-name" title="If you do something Forcefully, you’re direct, unsubtle, and rely on raw strength and brute force.">Forcefully</td>
                                    </tr>
                                    <tr>
                                        <td class="attribute-value">{% if variables.quietly is defined %}{{variables.quietly}}{% endif %}</td>
                                        <td class="attribute-name" title="If you do something Quietly, you try to avoid notice or attention.">Quietly</td>
                                    </tr>
                                    <tr>
                                        <td class="attribute-value">{% if variables.swiftly is defined %}{{variables.swiftly}}{% endif %}</td>
                                        <td class="attribute-name" title="If you do something Swiftly, you’re quick to respond to problems, and likely quick to achieve your goals.">Swiftly</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </p>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12 col-md-6 col-lg-6">
            <div class="card">
                <div class="card-body">
                    <h4 class="text-center card-title">Contacts</h4>
                    <p class="card-text">{{variables.contacts is defined ? variables.contacts|nl2br }}</p>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-6">
            <div class="card">
                <div class="card-body">
                    <h4 class="text-center card-title">Notes</h4>
                    <p class="card-text">{{variables.notes is defined ? variables.notes|nl2br }}</p>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-12 col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="text-center card-title">Talents</h4>
                    <p class="card-text">{{variables.talents is defined ? variables.talents|nl2br }}</p>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-6 col-lg-6">
            <div class="card">
                <div class="card-body">
                    <h4 class="text-center card-title">Focuses</h4>
                    <p class="card-text">
                        <div class="table-responsive">
                            <table class="table-borderless">
                                <tbody>
                                    {{ _self.genFocus("01", variables.focus_name_01, variables.focus_score_01) }}
                                    {{ _self.genFocus("02", variables.focus_name_02, variables.focus_score_02) }}
                                    {{ _self.genFocus("03", variables.focus_name_03, variables.focus_score_03) }}
                                    {{ _self.genFocus("04", variables.focus_name_04, variables.focus_score_04) }}
                                    {{ _self.genFocus("05", variables.focus_name_05, variables.focus_score_05) }}
                                    {{ _self.genFocus("06", variables.focus_name_06, variables.focus_score_06) }}
                                    {{ _self.genFocus("07", variables.focus_name_07, variables.focus_score_07) }}
                                    {{ _self.genFocus("08", variables.focus_name_08, variables.focus_score_08) }}
                                    {{ _self.genFocus("09", variables.focus_name_09, variables.focus_score_09) }}
                                    {{ _self.genFocus("10", variables.focus_name_10, variables.focus_score_10) }}
                                </tbody>
                            </table>
                        </div>
                    </p>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-6">
            <div class="card">
                <div class="card-body">
                    <h4 class="text-center card-title">Belongings</h4>
                    <p class="card-text">{{variables.belongings is defined ? variables.belongings|nl2br }}</p>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12 col-md-12 col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="text-center card-title">Powers</h4>
                    <p class="card-text">{{variables.powers is defined ? variables.powers|nl2br }}</p>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12 text-center">
            <small>
                Artwork and graphics &copy; 2020 ZeniMax Media Inc. Dishonored and related logos are trademarks or registered trademarks of ZeniMax Media Inc. or its affiliates in the U.S. and/or other countries.<br><a href="/w/sheet-creation/a/sheet-list">Dishonored Character Sheet v1.00</a>, made by Tillerz for Modiphius - Updated: 2020-10-31
            </small>
        </div>
    </div>
</div>