<div class="gold"></div>
<div class="inside-content">
    <div class="form-wrapper">
        <div class="row">
            <div class="col-12 col-md-6">
                <label for="name" class="control-label"><h4 class="header-title">Name</h4></label>
                <input value="{{ variables.name|default }}" class="form-control" id="name" name="name" placeholder="Disco Dragon" type="text" required="required" />
                <p class="description form-control-description">Monster name</p>
            </div>
            <div class="col-12 col-md-3">
                <label for="challenge_rating" class="control-label"><h4 class="header-title">CR</h4></label>
                <input value="{{ variables.challenge_rating|default ? variables.challenge_rating }}" class="form-control" id="challenge_rating" name="challenge_rating" placeholder="1/2" type="text" />
                <p class="description form-control-description">Challenge Rating</p>
            </div>
            <div class="col-12 col-md-3">
                <label for="xp" class="control-label"><h4 class="header-title">XP</h4></label>
                <input value="{{ variables.xp|default }}" class="form-control" id="xp" name="xp" placeholder="-" type="text" />
                <p class="description form-control-description">Experience Points</p>
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-md-6">
                <label for="types" class="control-label"><h4 class="header-title">Types / Traits</h4></label>
                <input value="{{ variables.types|default }}"  class="form-control" id="types" name="types" placeholder="Celestial, Dragon" type="text" />
            </div>
            <div class="col-12 col-md-6">
                <label for="pb" class="control-label"><h4 class="header-title">Proficiency Bonus</h4></label>
                <input value="{{ variables.pb|default }}"  class="form-control" id="pb" name="pb" placeholder="+0" type="text" />
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-md-3">
                <label for="size" class="control-label"><h4 class="header-title">Size</h4><br></label>
                <select class="form-control" id="size" name="size">
                    <option value="Tiny" {% if variables.size is defined and variables.size == "Tiny" %}selected="selected" {% endif %} >Tiny</option>
                    <option value="Small" {% if variables.size is defined and variables.size == "Small" %}selected="selected" {% endif %} >Small</option>
                    <option value="Medium" {% if variables.size is defined and variables.size == "Medium" %}selected="selected" {% endif %} >Medium</option>
                    <option value="Large" {% if variables.size is defined and variables.size == "Large" %}selected="selected" {% endif %} >Large</option>
                    <option value="Huge" {% if variables.size is defined and variables.size == "Huge" %}selected="selected" {% endif %} >Huge</option>
                    <option value="Gargantuan" {% if variables.size is defined and variables.size == "Gargantuan" %}selected="selected" {% endif %} >Gargantuan</option>
                </select>
            </div>
            <div class="col-12 col-md-9">
                <label for="sizer" class="control-label"><h4 class="header-title">Size Upper Range</h4> (leave at NONE if there is only one size of this creature)</label>
                <select class="form-control" id="sizer" name="sizer">
                    <option value="NONE" {% if variables.sizer is defined and variables.sizer == "NONE" %}selected="selected" {% endif %} >NONE</option>
                    <option value="Tiny" {% if variables.sizer is defined and variables.sizer == "Tiny" %}selected="selected" {% endif %} >Tiny</option>
                    <option value="Small" {% if variables.sizer is defined and variables.sizer == "Small" %}selected="selected" {% endif %} >Small</option>
                    <option value="Medium" {% if variables.sizer is defined and variables.sizer == "Medium" %}selected="selected" {% endif %} >Medium</option>
                    <option value="Large" {% if variables.sizer is defined and variables.sizer == "Large" %}selected="selected" {% endif %} >Large</option>
                    <option value="Huge" {% if variables.sizer is defined and variables.sizer == "Huge" %}selected="selected" {% endif %} >Huge</option>
                    <option value="Gargantuan" {% if variables.sizer is defined and variables.sizer == "Gargantuan" %}selected="selected" {% endif %} >Gargantuan</option>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-md-6">
                <label for="languages" class="control-label"><h4 class="header-title">Languages</h4></label>
                <input value="{{ variables.languages is defined ? variables.languages }}"  class="form-control" id="languages" name="languages" placeholder="Common, Dwarvish, Draconic" type="text" />
            </div>
            <div class="col-12 col-md-6">
                <label for="alignment" class="control-label"><h4 class="header-title">Alignment(s)</h4></label>
                <input value="{{ variables.alignment is defined ? variables.alignment }}"  class="form-control" id="alignment" name="alignment" placeholder="eg Chaotic Neutral" type="text" />
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <label for="description" class="control-label"><h4 class="header-title">Description</h4></label>
                <textarea class="form-control mention" id="description" name="description" rows="3">{{ variables.description is defined ? variables.description }}</textarea>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <label for="suggested_environments" class="control-label"><h4 class="header-title">Suggested Environments</h4></label>
                <textarea class="form-control mention" id="suggested_environments" name="suggested_environments" rows="4">{{ variables.suggested_environments is defined ? variables.suggested_environments }}</textarea>
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-md-6">
                <label for="armor_class" class="control-label"><h4 class="header-title">Armor Class</h4></label>
                <input value="{{ variables.armor_class is defined ? variables.armor_class }}"  class="form-control" id="armor_class" name="armor_class" placeholder="12" type="text" />
            </div>
            <div class="col-12 col-md-6">
                <label for="hit_points" class="control-label"><h4 class="header-title">Hit Points</h4></label>
                <input value="{{ variables.hit_points is defined ? variables.hit_points }}"  class="form-control" id="hit_points" name="hit_points" placeholder="Use [roll:2d8+4] to add the dice roller" type="text" />
                <p class="description form-control-description">14hp (2d8+4) [roll:2d8+4]</p>
            </div>
        </div><br><br>
        <div class="gold"></div>
        <div class="row">
            <div class="col-4 col-md-2">
                <label for="strength" class="control-label"><h4 class="header-title">STR</h4></label>
                <input value="{{ variables.strength is defined ? variables.strength }}"  class="form-control" id="strength" name="strength" type="number" />
            </div>
            <div class="col-4 col-md-2">
                <label for="dexterity" class="control-label"><h4 class="header-title">DEX</h4></label>
                <input value="{{ variables.dexterity is defined ? variables.dexterity }}"  class="form-control" id="dexterity" name="dexterity" type="number" />
            </div>
            <div class="col-4 col-md-2">
                <label for="constitution" class="control-label"><h4 class="header-title">CON</h4></label>
                <input value="{{ variables.constitution is defined ? variables.constitution }}"  class="form-control" id="constitution" name="constitution" type="number" />
            </div>
            <div class="col-4 col-md-2">
                <label for="intelligence" class="control-label"><h4 class="header-title">INT</h4></label>
                <input value="{{ variables.intelligence is defined ? variables.intelligence }}"  class="form-control" id="intelligence" name="intelligence" type="number" />
            </div>
            <div class="col-4 col-md-2">
                <label for="wisdom" class="control-label"><h4 class="header-title">WIS</h4></label>
                <input value="{{ variables.wisdom is defined ? variables.wisdom }}"  class="form-control" id="wisdom" name="wisdom" type="number" />
            </div>
            <div class="col-4 col-md-2">
                <label for="charisma" class="control-label"><h4 class="header-title">CHA</h4></label>
                <input value="{{ variables.charisma is defined ? variables.charisma }}"  class="form-control" id="charisma" name="charisma" type="number" />
            </div>
        </div>
        <div class="gold"></div><br><br>
        <h2>Movement</h2>
        <div class="row">
            <div class="col-12">
            <label for="base_movement_units" class="control-label"><h4 class="header-title">Movement Units</h4></label>
            <input value="{{ variables.base_movement_units|default }}"  class="form-control" id="base_movement_units" name="base_movement_units" placeholder="default: ft" type="text" size=10 />
            </div>
            <div class="col-4 col-md-2">
                <label for="base_movement_in_ft" class="control-label"><h4 class="header-title">Base</h4></label>
                <input value="{{ variables.base_movement_in_ft is defined ? variables.base_movement_in_ft }}"  class="form-control" id="base_movement_in_ft" name="base_movement_in_ft" placeholder="30" type="number" />
            </div>
            <div class="col-4 col-md-2">
                <label for="fly_movement_in_ft" class="control-label"><h4 class="header-title">Fly</h4></label>
                <input value="{{ variables.fly_movement_in_ft is defined ? variables.fly_movement_in_ft }}"  class="form-control" id="fly_movement_in_ft" name="fly_movement_in_ft" placeholder="120" type="number" />
            </div>
            <div class="col-4 col-md-2">
                <label for="burrow_movement_in_ft" class="control-label"><h4 class="header-title">Burrow</h4></label>
                <input value="{{ variables.burrow_movement_in_ft is defined ? variables.burrow_movement_in_ft }}"  class="form-control" id="burrow_movement_in_ft" name="burrow_movement_in_ft" placeholder="5" type="number" />
            </div>
            <div class="col-4 col-md-2">
                <label for="swim_movement_in_ft" class="control-label"><h4 class="header-title">Swim</h4></label>
                <input value="{{ variables.swim_movement_in_ft is defined ? variables.swim_movement_in_ft }}"  class="form-control" id="swim_movement_in_ft" name="swim_movement_in_ft" placeholder="10" type="number" />
            </div>
            <div class="col-4 col-md-2">
                <label for="climb_movement_in_ft" class="control-label"><h4 class="header-title">Climb</h4></label>
                <input value="{{ variables.climb_movement_in_ft is defined ? variables.climb_movement_in_ft }}"  class="form-control" id="climb_movement_in_ft" name="climb_movement_in_ft" placeholder="15" type="number" />
            </div>
            <div class="col-4 col-md-2 c">
                <label for="can_hover" class="control-label"><h4 class="header-title">Can Hover</h4></label><br>
                {% set can_hover = 0 %}
                {% if variables.hover_movement_in_ft is defined and variables.hover_movement_in_ft > 0 %}{% set can_hover = 1 %}{% endif %}
            	<input value="1" {% if can_hover == 1 %} checked="checked"{% endif %} id="can_hover" name="can_hover" type="checkbox" /></td>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <label for="senses" class="control-label"><h4 class="header-title">Senses</h4></label>
                <textarea class="form-control mention" id="senses" name="senses" rows="2" placeholder="Darkvision, Truesight, Passive perception etc">{{ variables.senses is defined ? variables.senses }}</textarea>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <label for="skills" class="control-label"><h4 class="header-title">Skills</h4></label>
                <textarea class="form-control mention" id="skills" name="skills" rows="5" placeholder="Acrobatics +7, Investigation +3 etc">{{ variables.skills is defined ? variables.skills }}</textarea>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <label for="saving_throws" class="control-label"><h4 class="header-title">Saving Throws</h4></label>
                <input value="{{ variables.saving_throws is defined ? variables.saving_throws }}"  class="form-control" id="saving_throws" name="saving_throws" type="text" />
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-md-6">
                <label for="damage_vulnerabilities" class="control-label"><h4 class="header-title">Damage Vulnerabilities</h4></label>
                <input value="{{ variables.damage_vulnerabilities is defined ? variables.damage_vulnerabilities }}"  class="form-control" id="damage_vulnerabilities" name="damage_vulnerabilities" type="text" />
            </div>
            <div class="col-12 col-md-6">
                <label for="damage_resistances" class="control-label"><h4 class="header-title">Damage Resistances</h4></label>
                <input value="{{ variables.damage_resistances is defined ? variables.damage_resistances }}"  class="form-control" id="damage_resistances" name="damage_resistances" type="text" />
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-md-6">
                <label for="damage_immunities" class="control-label"><h4 class="header-title">Damage Immunities</h4></label>
                <input value="{{ variables.damage_immunities is defined ? variables.damage_immunities }}"  class="form-control" id="damage_immunities" name="damage_immunities" type="text" />
            </div>
            <div class="col-12 col-md-6">
                <label for="condition_immunities" class="control-label"><h4 class="header-title">Condition Immunities</h4></label>
                <input value="{{ variables.condition_immunities is defined ? variables.condition_immunities }}"  class="form-control" id="condition_immunities" name="condition_immunities" type="text" />
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <label for="spellcasting" class="control-label"><h4 class="header-title">Spellcasting</h4></label>
                <textarea class="form-control mention" id="spellcasting" name="spellcasting" rows="5">{{ variables.spellcasting|default }}</textarea>
                <p class="description form-control-description">Spellcasting ability, Score, Attack bonus etc</p>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <label for="cast_at_will" class="control-label"><h4 class="header-title">Cast at will</h4></label>
                <textarea class="form-control mention" id="cast_at_will" name="cast_at_will" rows="4">{{ variables.cast_at_will|default }}</textarea>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <label for="cast_one_per_day" class="control-label"><h4 class="header-title">Cast one per day</h4></label>
                <textarea class="form-control mention" id="cast_one_per_day" name="cast_one_per_day" rows="4">{{ variables.cast_one_per_day|default }}</textarea>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <label for="cast_twice_per_day" class="control-label"><h4 class="header-title">Cast twice per day</h4></label>
                <textarea class="form-control mention" id="cast_twice_per_day" name="cast_twice_per_day" rows="4">{{ variables.cast_twice_per_day|default }}</textarea>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <label for="cast_thrice_per_day" class="control-label"><h4 class="header-title">Cast thrice per day</h4></label>
                <textarea class="form-control mention" id="cast_thrice_per_day" name="cast_thrice_per_day" rows="4">{{ variables.cast_thrice_per_day|default }}</textarea>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <label for="special_abilities" class="control-label"><h4 class="header-title">Special Abilities</h4></label>
                <textarea class="form-control mention" id="special_abilities" name="special_abilities" rows="6">{{ variables.special_abilities|default }}</textarea>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <label for="actions" class="control-label"><h4 class="header-title">Actions</h4></label>
                <textarea class="form-control mention" id="actions" name="actions" rows="10" placeholder="[b]Unarmed Strike[/b]. Melee Weapon Attack: +4 to hit, reach 5ft. one target. Hit: 6 (1d8+2) [roll:1d8+2] bludgeoning damage.">{{ variables.actions is defined ? variables.actions }}</textarea>
                <p class="description form-control-description">use [b] .. [/b] to bolden the name. Use [roll:1d10+2] (your dice roll) in order for the dice roller to be activated on the statblock</p>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <label for="bonus_actions" class="control-label"><h4 class="header-title">Bonus Actions</h4></label>
                <textarea class="form-control mention" id="bonus_actions" name="bonus_actions" rows="10" >{{ variables.bonus_actions is defined ? variables.bonus_actions }}</textarea>
                <p class="description form-control-description">use [b] .. [/b] to bolden the name. Use [roll:1d10+2] (your dice roll) in order for the dice roller to be activated on the statblock</p>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <label for="reactions" class="control-label"><h4 class="header-title">Reactions</h4></label>
                <textarea class="form-control mention" id="reactions" name="reactions" rows="5" placeholder="[b]Horned Parry[/b]. Once per combat the Horned Pidgeon can parry an attack using it's horns ">{{ variables.reactions is defined ? variables.reactions }}</textarea>
                <p class="description form-control-description">use [b] .. [/b] to bolden the name. Use [roll:1d10+2] (your dice roll) in order for the dice roller to be activated on the statblock</p>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <label for="legendary_actions" class="control-label"><h4 class="header-title">Legendary Actions</h4></label>
                <textarea class="form-control mention" id="legendary_actions" name="legendary_actions" rows="10">{{ variables.legendary_actions|default }}</textarea>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <label for="lair_description" class="control-label"><h4 class="header-title">Lair Description</h4></label>
                <textarea class="form-control mention" id="lair_description" name="lair_description" rows="5">{{ variables.lair_description|default }}</textarea>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <label for="lair_actions" class="control-label"><h4 class="header-title">Lair Actions</h4></label>
                <textarea class="form-control mention" id="lair_actions" name="lair_actions" rows="10">{{ variables.lair_actions|default }}</textarea>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <label for="regional_effects" class="control-label"><h4 class="header-title">Regional Effects</h4></label>
                <textarea class="form-control mention" id="regional_effects" name="regional_effects" rows="5">{{ variables.regional_effects|default }}</textarea>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <label for="motivation" class="control-label"><h4 class="header-title">Motivation/Compulsion</h4></label>
                <textarea class="form-control mention" id="motivation" name="motivation" rows="5">{{ variables.motivations|default }}</textarea>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <label for="tactics" class="control-label"><h4 class="header-title">Usual Tactics</h4></label>
                <textarea class="form-control mention" id="tactics" name="tactics" rows="5">{{ variables.tactics|default }}</textarea>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <label for="image_gallery_id" class="control-label"><h4 class="header-title">Image Gallery ID</h4></label>
                <input value="{{ variables.image_gallery_id is defined ? variables.image_gallery_id }}"  class="form-control" id="image_gallery_id" name="image_gallery_id" placeholder="123" type="number" />
                <p class="description form-control-description">paste here the ID of the image you want to be used as the image of the item</p>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <label for="source" class="col-sm-2 control-label"><h4 class="header-title">source</h4></label>
                <input  value="{{ variables.source|default }}"  class="form-control" id="source" name="source" placeholder="SRD" type="text" />
                <p class="description form-control-description">Where can this be found (SRD, Homebrew, etc.)</p>
	        </div>
        </div>
    </div>
</div>
