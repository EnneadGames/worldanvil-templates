<div class="gold"></div>
<div class="inside-content">
	<div class="row">
		<div class="col-12 col-md-12">
			<h1 class="dnd5e-sheet-header">Name</h1> <input value="{{ variables.name }}" required="required" class="form-control" id="name" name="name" placeholder="The name of the race" type="text" />
			<div class="statblock-stat"><strong>overview</strong><br>
			<span><textarea class="form-control mention" id="overview" name="overview" rows="3" placeholder="Short description of the race">{{ variables.overview is defined ? variables.overview }}</textarea></span></div>
			<div class="dndline"></div>
			WA Image ID: <input value="{{ variables.image_id is defined ? variables.image_id }}" class="form-control" id="image_id" name="image_id" type="number" /><br>
			<div class="statblock-stat"><strong>ability score increase</strong><br>
			<span><input value="{{ variables.ability_score_increase is defined ? variables.ability_score_increase }}" class="form-control mention" id="ability_score_increase" name="ability_score_increase" type="text" /></span></div>
			<div class="statblock-stat"><strong>age</strong><br>
			<span><input value="{{ variables.age is defined ? variables.age }}" class="form-control mention" id="age" name="age" type="text" /></span></div>
			<div class="statblock-stat"><strong>alignment</strong><br>
			<span><input value="{{ variables.alignment is defined ? variables.alignment }}" class="form-control mention" id="alignment" name="alignment" placeholder="eg: usually good or neutral" type="text" /></span></div>
			<div class="statblock-stat"><strong>Size</strong><br>
				<span>
					<select class="form-control" id="size" name="size">
					<option value="Tiny" {% if variables.size is defined and variables.size == "Tiny" %}selected="selected" {% endif %} >Tiny</option>
					<option value="Small" {% if variables.size is defined and variables.size == "Small" %}selected="selected" {% endif %} >Small</option>
					<option value="Medium" {% if variables.size is defined and variables.size == "Medium" %}selected="selected" {% endif %} >Medium</option>
					<option value="Large" {% if variables.size is defined and variables.size == "Large" %}selected="selected" {% endif %} >Large</option>
					<option value="Huge" {% if variables.size is defined and variables.size == "Huge" %}selected="selected" {% endif %} >Huge</option>
					<option value="Gargantuan" {% if variables.size is defined and variables.size == "Gargantuan" %}selected="selected" {% endif %} >Gargantuan</option>
					</select>
				</span>
			</div>
			<div class="statblock-stat"><strong>speed</strong><br>
				<span><input value="{{ variables.speed is defined ? variables.speed }}" class="form-control mention" id="speed" name="speed" placeholder="eg 20ft" type="text" /></span>
			</div>
			<div class="statblock-stat"><strong>Languages</strong><br>
				<span><input value="{{ variables.languages is defined ? variables.languages }}" class="form-control mention" id="languages" name="languages" placeholder="Common, Dwarvish, Draconic" type="text" /></span>
			</div>
			<div class="statblock-stat"><strong>parent race</strong><br>
				<span><input value="{{ variables.parent_race is defined ? variables.parent_race }}" class="form-control" id="parent_race" name="parent_race" type="text" placeholder="block id of the parent race if this is a sub race, or else leave empty" /></span>
			</div>
			<div class="statblock-stat"><strong>sub races</strong><br>
				<span><input value="{{ variables.sub_races is defined ? variables.sub_races }}" class="form-control" id="sub_races" name="sub_races" type="text" placeholder="sub race block ids separated by comma" /></span>
			</div>
			<div class="dndline"></div>
			<div class="statblock-stat"><strong>race features</strong><br>
				<span><textarea class="form-control mention" id="race_features" name="race_features" rows="3">{{ variables.race_features is defined ? variables.race_features }}</textarea></span>
			</div>
			<div class="dndline"></div>
			<div class="statblock-stat"><strong>description</strong><br>
			<span><textarea class="form-control mention" id="description" name="description" rows="3">{{ variables.description is defined ? variables.description }}</textarea></span></div>
		</div>
    <div class="ibox">
        <div class="ibox-content">
            <label for="source" class="col-sm-2 control-label">
                <h4 class="header-title">source</h4>
            </label>
            <div class="col-sm-12">
                <input  value="{{ variables.source is defined ? variables.source }}"  class="form-control mention" id="source" name="source" placeholder="SRD" type="text" />
                <p class="description form-control-description">Source</p>
            </div>
        </div>
    </div>
	</div>
</div>
<div class="gold"></div>