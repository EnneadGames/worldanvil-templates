{% macro genBonus(a) %} {# ----------------------------------------------------------------------- #}
{% if a is defined and a != '' %}
{% set b = '-2' %}
{% if a >= 4 %}{% set b = '-1' %}{% endif %}
{% if a >= 8 %}{% set b = '0' %}{% endif %}
{% if a >= 14 %}{% set b = '+1' %}{% endif %}
{% if a >= 18 %}{% set b = '+2' %}{% endif %}
{{b}}
{% else %}0{% endif %}{% endmacro genBonus %}
