              {% if name == "" %}{% set empty = empty + 1 %}{% if empty > maxempty %}{% set done = true %}{% endif %}{% endif %}
              {% if name != "" or done != true %}
              <tr><th class='ilbl {{eo}} ilbl-talent'><label for='talent'>Talent {{id}}</label></th>
