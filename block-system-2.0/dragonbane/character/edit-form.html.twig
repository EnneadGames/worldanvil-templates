                    <table class='table'>
                        <tr><th class='ilbl {{eo}} ilbl-gold' width='20%'> Gold </th><td class='ivar {{eo}} ivar-gold c'><input value='{{variables.gold|default}}' class='form-control ivar ivar-gold md' id='gold' name='gold' type='number'    /></td></tr>
                        <tr><th class='ilbl {{eo}} ilbl-silver'> Silver </th><td class='ivar {{eo}} ivar-silver c'><input value='{{variables.silver|default}}' class='form-control ivar ivar-silver md' id='silver' name='silver' type='number'    /></td></tr>
                        <tr><th class='ilbl {{eo}} ilbl-copper'> Copper </th><td class='ivar {{eo}} ivar-copper c'><input value='{{variables.copper|default}}' class='form-control ivar ivar-copper md' id='copper' name='copper' type='number'    /></td></tr>
                        <tr><th class='ilbl {{eo}} ilbl-memento'> Memento </th><td class='ivar {{eo}} ivar-memento'><div class='iContent'><input value='{{variables.memento|default}}' class='form-control ivar ivar-memento' id='memento' name='memento' type='text' /></div></td></tr>
                        <tr><th class='ilbl {{eo}} ilbl-tiny-items'> Tiny Items </th><td class='ivar {{eo}} ivar-tiny-items'><div class='iContent'><textarea class='form-control ivar ivar-tiny-items' id='tiny_items' name='tiny_items' rows='3'  >{{variables.tiny_items|default}}</textarea></div></td></tr>
                    </table>
                </div>
            </div>
        </div>
