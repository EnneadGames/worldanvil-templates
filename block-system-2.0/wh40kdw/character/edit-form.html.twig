{% macro chaSelect(characteristics, name = "", cha = "", default = "NONE") %}
{% if cha == "" %}{% set cha = default %}{% endif %}
<select class="form-control" id="{{name}}" name="{{name}}">
    {% for c in characteristics %}
        {% set ch = c[0]|default %}
