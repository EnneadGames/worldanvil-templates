{# --- skillList -------------------------------- #}
{% macro skillList(c, v, x1, x2) %}{% set eo = 'od' %}{% set trained = 0 %}<table class='table'>
  <tr>
    <th class='ihdr od'>Skill</th>
    <th class='ihdr od c'>ATT</th>
    <th class='ihdr od c' width='40px' title='Basic'>B</th>
    <th class='ihdr od c' width='40px' title='Trained'>T</th>
    <th class='ihdr od c' width='40px' title='+10%'>+10</th>
    <th class='ihdr od c' width='40px' title='+20%'>+20</th>
  </tr>
{% for k in c.skill_list %}
  {% set att = k[2]|default %}
  {% set id = k[0]|default %}{% set sk = k[1]|default %}{% set p = k[3]|default %}
  {% if id >= x1 and id <= x2 %}
    {# attribute line #}
    {% set rb = attribute(v, "skill_" ~ id ~ "_b")|default %}
    {% set rt = attribute(v, "skill_" ~ id ~ "_t")|default %}
    {% set r1 = attribute(v, "skill_" ~ id ~ "_1")|default %}
    {% set r2 = attribute(v, "skill_" ~ id ~ "_2")|default %}
    {# wildcard skill with editable skill name #}
    {% if "W" in p %}{% set sk = attribute(v, "skill_" ~ id ~ "_name")|default %}{% endif %}
    {% set rankval = attribute(v, "skill_" ~ id ~ "_rank")|default %}
    <tr>
    {% if "W" in p %}{# wildcard skill #}
        {% set skillname = attribute(v, "skill_" ~ id ~ "_name")|default %}
        <td class='ilbl {{eo}} r'>{% if "I" in p %}&nbsp;&nbsp;&nbsp;{% endif %}<input class="form-control wd75p" type="text" id="skill_{{id}}_name" name="skill_{{id}}_name" value="{{ skillname }}"/></td>
    {% else %}
        <td class='ilbl {{eo}}'>{% if "I" in p %}&nbsp;&nbsp;&nbsp;{% endif %}{{sk}}</td>
    {% endif %}
        {% set attv = attribute(c, "att_" ~ att|lower ) %}
        <td class='ilbl {{eo}}' title="{{att}} = {{attv}}">{% if "I" not in p %}{{att}}{% endif %}</td>
        <td class='ivar {{eo}} c' title='Basic'>
            <input class="cb" value="1" {% if rb > 0 %} checked="checked"{% endif %} id="skill_{{id}}_b" name="skill_{{id}}_b" type="checkbox" />
        </td>
        <td class='ivar {{eo}} c' title='Trained'>
            <input class="cb" value="1" {% if rt > 0 %} checked="checked"{% endif %} id="skill_{{id}}_t" name="skill_{{id}}_t" type="checkbox" />
        </td>
        <td class='ivar {{eo}} c' title='+10%'>
            <input class="cb" value="1" {% if r1 > 0 %} checked="checked"{% endif %} id="skill_{{id}}_1" name="skill_{{id}}_1" type="checkbox" />
        </td>
        <td class='ivar {{eo}} c' title='+20%'>
            <input class="cb" value="1" {% if r2 > 0 %} checked="checked"{% endif %} id="skill_{{id}}_2" name="skill_{{id}}_2" type="checkbox" />
        </td>
        {# <input class="form-control c" type="number" id="skill_{{id}}_rank" name="skill_{{id}}_rank" value="{{ rankval }}"/></td> #}
        <td class='ivar {{eo}} c'>{# sheet.showScore(attval + rankval, trained, restricted) #}</td>
    </tr>
    {% if eo == 'od' %}{% set eo = 'ev' %}{% else %}{% set eo = 'od' %}{% endif %}
  {% endif %}
{% endfor %}</table>{% endmacro skillList %}
